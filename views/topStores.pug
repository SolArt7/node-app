extends layout

block content
    .inner
        h2 Top #{stores.length} stores
        table.table
            thead
                td Photo
                td Ranking
                td Name
                td Reviews
                td Average Rating
            each store, i in stores
                tr
                    td
                        a(href=`/store/${store.slug}`)
                            img(width=200 src=`/uploads/${store.photo || 'store.png'}` alt=store.name)
                    td
                        span #{i + 1}

                    td
                        a(href=`/store/${store.slug}`)
                            span= store.name
                    td
                        span= store.reviews && store.reviews.length
                    td
                        span #{store.averageRating.toFixed(1)} / 5